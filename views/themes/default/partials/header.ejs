<header class="header">
  <div class="header-container">
    <!-- Logo区域 -->
    <div class="header-left">
      <button class="menu-toggle" id="menuToggle">
        <span></span>
        <span></span>
        <span></span>
      </button>
      <a href="/" class="logo">
        <% if (site && site.logo) { %>
          <img src="<%= site.logo %>" alt="<%= site.name || 'VideoSite' %>" class="logo-img">
        <% } else { %>
          <span class="logo-text"><%= site.name || 'VideoSite' %></span>
        <% } %>
      </a>
    </div>

    <!-- 搜索区域 -->
    <div class="header-center">
      <div class="search-container">
        <input type="text" class="search-input" placeholder="搜索" value="<%= typeof query !== 'undefined' ? query : '' %>">
        <button class="search-btn" type="submit">
          <svg viewBox="0 0 24 24">
            <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- 用户区域 -->
    <div class="header-right">
      <!-- 移动端搜索按钮 -->
      <button class="icon-btn mobile-search-btn" id="mobileSearchBtn">
        <svg viewBox="0 0 24 24">
          <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
        </svg>
      </button>
      <button class="icon-btn">
        <svg viewBox="0 0 24 24">
          <path d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2zm6-6v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z"/>
        </svg>
      </button>
      <div class="user-menu">
        <button class="user-avatar">
          <img src="/images/default-avatar.jpg" alt="用户头像">
        </button>
      </div>
    </div>
  </div>

  <!-- 移动端搜索覆盖层 -->
  <div class="mobile-search-overlay" id="mobileSearchOverlay">
    <div class="mobile-search-container">
      <button class="mobile-search-back" id="mobileSearchBack">
        <svg viewBox="0 0 24 24">
          <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
        </svg>
      </button>
      <div class="mobile-search-input-container">
        <input type="text" class="mobile-search-input" placeholder="搜索" value="<%= typeof query !== 'undefined' ? query : '' %>">
        <button class="mobile-search-submit" type="submit">
          <svg viewBox="0 0 24 24">
            <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>
