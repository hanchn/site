<div class="page-header">
    <div class="container">
        <h1><%= title %></h1>
        <p class="page-description">管理和查看所有用户信息</p>
    </div>
</div>

<section class="users-section">
    <div class="container">
        <div class="users-header">
            <div class="users-count">
                <span class="count-number"><%= users.length %></span>
                <span class="count-label">位用户</span>
            </div>
            <div class="users-actions">
                <button class="btn btn-primary">添加用户</button>
            </div>
        </div>
        
        <div class="users-grid">
            <% users.forEach(user => { %>
                <div class="user-card">
                    <div class="user-avatar">
                        <% if (user.avatar) { %>
                            <img src="<%= user.avatar %>" alt="<%= user.displayName || user.name %>的头像" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                            <div class="avatar-fallback" style="display: none;">
                                <%= (user.displayName || user.name).charAt(0).toUpperCase() %>
                            </div>
                        <% } else { %>
                            <div class="avatar-fallback">
                                <%= (user.displayName || user.name).charAt(0).toUpperCase() %>
                            </div>
                        <% } %>
                    </div>
                    <div class="user-info">
                        <h3 class="user-name"><%= user.displayName || user.name %></h3>
                        <p class="user-email"><%= user.email %></p>
                        <div class="user-meta">
                            <span class="user-id">ID: <%= user.id %></span>
                            <% if (user.verified) { %>
                                <span class="verified-badge">✓ 已验证</span>
                            <% } %>
                        </div>
                    </div>
                    <div class="user-actions">
                        <a href="/users/<%= user.id %>" class="btn btn-sm btn-primary">查看详情</a>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <div class="back-link">
            <a href="/" class="btn btn-secondary">返回首页</a>
        </div>
    </div>
</section>